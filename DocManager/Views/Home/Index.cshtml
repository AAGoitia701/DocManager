@page

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DocManager - Página Principal</title>
    <!-- Agregar Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .feature {
            text-align: center;
            padding: 15px;
        }

            .feature img {
                max-width: 100%;
                height: auto;
                margin-bottom: 10px;
            }

        .btn-primary {
            margin-top: 15px;
        }

        .stats .stat {
            padding: 15px;
            border: 1px solid #ddd;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="container my-5">
        <!-- Encabezado -->
        <header class="text-center mb-5">
            <h1>Bienvenido a DocManager</h1>
            <p>Gestión eficiente de pacientes y citas médicas.</p>
        </header>

        <!-- Sección de funcionalidades -->
        <div class="row text-center">
            <!-- Sección 1: Gestión de Pacientes -->
            <div class="col-md-4 mb-4">
                <div class="feature">
                    <img src="DocManager_Fotos/pacientes/7774.jpg" alt="Gestión de Pacientes" class="img-fluid" width="300px"/>
                    <h3>Gestión de Pacientes</h3>
                    <p>Accede a la información detallada de todos tus pacientes.</p>
                </div>
            </div>

            <!-- Sección 2: Programar Citas -->
            <div class="col-md-4 mb-4">
                <div class="feature">
                    <img src="DocManager_Fotos/cita/3967617.jpg" alt="Programar Citas" class="img-fluid" width="300px" />
                    <h3>Programar Citas</h3>
                    <p>Agenda citas médicas rápidamente.</p>
                </div>
            </div>

            <!-- Sección 3: Historial Médico -->
            <div class="col-md-4 mb-4">
                <div class="feature">
                    <img src="DocManager_Fotos/foto3/20943451.jpg" alt="Historial Médico" class="img-fluid"width="300px" />
                    <h3>Historial Médico</h3>
                    <p>Consulta el historial médico de tus pacientes.</p>
                </div>
            </div>
        </div>

        <!-- Sección de Estadísticas Rápidas -->
        <section class="stats text-center my-5">
            <h2>Estadísticas Rápidas</h2>
            <div class="row">
                <!-- Estadística de pacientes -->
                <div class="col-md-4">
                    <div class="stat">
                        <h4>Pacientes Registrados</h4>
                        <p>150</p>
                    </div>
                </div>
                <!-- Estadística de citas -->
                <div class="col-md-4">
                    <div class="stat">
                        <h4>Citas Programadas</h4>
                        <p>38</p>
                    </div>
                </div>
                <!-- Estadística adicional -->
                <div class="col-md-4">
                    <div class="stat">
                        <h4>Consultas Pendientes</h4>
                        <p>12</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pie de página -->
        <footer class="text-center mt-5">
            <p>&copy; 2025 DocManager | Todos los derechos reservados</p>
        </footer>

    </div>

    <!-- Agregar Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
